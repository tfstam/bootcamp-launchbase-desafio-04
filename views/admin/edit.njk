{% extends "admin/layout.njk" %}

{% block content %}
<div class="container">
<div class="form-header">
  <h2>{{ pageTitle }}</h2>
  <div class="form-btn">
    <form id="form-delete" action="/admin/recipes?_method=DELETE" method="POST">
      {% include "admin/deletebtn.njk" %}
    </form>
    <button type="submit" form="post">Salvar receita</button>
  </div>
</div>
  <form method="POST" action="/admin/recipes?_method=PUT" id="post">
    {% include "admin/fields.njk" %}
    <input type="hidden" name="id" value="{{ recipe.id }}">
  </form>
</div>
{% endblock content %}